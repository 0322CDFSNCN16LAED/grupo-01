<!DOCTYPE html>
<html lang="es">
<head>
<%- include("./partials/head.ejs") %>
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/register.css">
<link rel="stylesheet" href="/css/home-tablet.css">
<link rel="stylesheet" href="/css/home-desktop.css">
<link rel="stylesheet" href="/css/laptop.css">
<script src="/js/registerValidation.js"> </script>
<script src="https://unpkg.com/validator@latest/validator.min.js"></script>
</head>

<body class="width-100vw height-100vh font-family-lilita bg-pagina display-flex flex-column min-heigth-100vh">

<header>
  <%- include("./partials/header.ejs") %>

</header>
    <main class="display-flex justify-content-center padleft20 padright20">
        <section class= "form-box registratecon">
            <!-- title  -->
            <div>
                <h1 class="text-color-blue"> Registrarse</h1>
            </div>
            <!-- registrarse con red social -->
            <div>
                <div class="margintop">
                    <h2 class="text-color-blue" >Registrate con :</h2>
                </div>
                
                <div class="display-flex justify-content-space-between flex-wrap-wrap align-self-center marginbottom width-40pc">
                    <div class="face-gmail justify-content-start ">
                        <i class="fab fa-facebook-square font-size-24 justify-content-center align-self-center margin-left-10px
                        margin-right-10px"></i>
                        <p class="justify-content-center align-self-center text-color-blue "><a href="https://es-la.facebook.com/" class="padtop15 justify-content-center align-self-center "> Facebook</a></p> 
                    </div>
                    <div class="face-gmail justify-content-start">
                        <p><i class="fas fa-envelope font-size-24 justify-content-center align-self-center margin-left-10px
                            margin-right-10px"></i></p>
                        <p class="justify-content-center align-self-center " ><a href="https://accounts.google.com/" class="padtop15 justify-content-center align-self-center "> Gmail</a></p>
                    </div>
                </div>
            </div>
            <!-- formulario de registro  -->
            <div>
                <form method="POST" action="/crearUsuario" enctype="multipart/form-data" class="formulario">
                    <div class="">
                        <h2 class="padtop15 text-color-blue " > O crea un usuario </h2>
                        <h3 class="padtop15 text-color-blue"  > Datos personales </h3> 
                        
                        <div class="display-flex justify-content-space-between flex-wrap-wrap padtop15" >
                            <input type="text" name="nombre" placeholder="Nombre" class="width-99pc border-reg height-30px "> 
                            <% if (locals.errors && errors.nombre) {%>
                                <p class="span"><%= errors.nombre.msg %></p> 
                            <% }%> 
                        <span class="error"></span>  
                        </div>
                            
                        <div class="display-flex justify-content-space-between flex-wrap-wrap padtop15" >
                            <input type="text" name="apellido" placeholder="Apellido" class="width-99pc border-reg height-30px ">
                            <% if (locals.errors && errors.apellido) {%>
                                <p class="span"><%= errors.apellido.msg %></p> 
                            <% }%>   
                            <span class="error"></span>
                        </div>
                        </br>

                        <label class="text-color-blue width-99pc">Fecha de nacimiento </label>
                        <div class="display-flex justify-content-space-between flex-wrap-wrap padtop15" ">
                            
                            <input type="date" name="nacimiento" class="border-reg height-30px width-99pc " >
                            <% if (locals.errors && errors.nacimiento) {%>
                                <p class="span"><%= errors.nacimiento.msg %></p> 
                              <% }%>  
                              <span class="error"></span>   
                        </div>
                        </br>
                        <div>
                            <p class="text-color-blue" > Sexo </p>
                            <select class="border-reg height-30px width-99pc " name="sexo">
                                <option> F </option>
                                <option> M </option>
                                <option> Otro </option>
                            </select>
                            <% if (locals.errors && errors.sexo) {%>
                                <p class="span"><%= errors.sexo.msg %></p> 
                              <% }%>  
                              <span class="error"></span>
                        </div>
                        </br>
                        <div>
                            <p class="text-color-blue "> Celular </p>
                            <input type="text" name="celular" placeholder="Celular" class="border-reg height-30px width-99pc ">
                            <% if (locals.errors && errors.celular) {%>
                                <p class="span"><%= errors.celular.msg %></p> 
                              <% }%>   
                              <span class="error"></span>
                        </div>
                        <br>
                        <div class="display-flex flex-wrap-wrap justify-content-center">
                            <p class="text-color-blue width-100pc "> Imagen usuario</p>
                            <input type="file" name="imagenusuario"  accept=".png, .jpg, .jpeg, .png, .gif" class="border-reg height-30px width-100pc"> 
                            <% if (locals.errors && errors.imagen) {%>
                                <p class="span"><%= errors.imagen.msg %></p> 
                              <% }%>  
                              <span class="error"></span>
                        </div>
                        <h3 class="padtop15 text-color-blue "> Datos de acceso </h3> 
        
                        <div class="padtop15" >
                            <input type="email" name="email" placeholder="Correo Electronico" class="width-99pc border-reg height-30px"> 
                            <% if (locals.errors && errors.email) {%>
                                <p class="span"><%= errors.email.msg %></p> 
                              <% }%>  
                              <span class="error"></span>
                        </div>
        
                        <div>
                            <input type="password" name="contrasena"  placeholder="Contraseña" class="width-99pc border-reg height-30px " > 
                            
                            <% if (locals.errors && errors.contrasena) {%>
                                <p class="span"><%= errors.contrasena.msg %></p> 
                              <% }%>  
                              <span class="error"></span>
                        </div>
                        <div>
                            <input type="password" name="password" placeholder="Confirmar contraseña" class="width-99pc border-reg height-30px " >
                            <span> *No coinciden </span> 
                        </div>  
                        <div>
                            <h2 class="text-color-blue" > Intereses </h2>
                            <div class="">
                                
                                <input type="checkbox" name="categoriaInteres"  value ="Electro" id="categoria_electro"  > 
                                <label for="categoria_electro "> Hambuerguesa </label>
                                <span class="error"></span>
                                
                            </div>
                            <div class="">
                                <input type="checkbox" name="categoriaInteres"  value ="Moda" id="categoria_moda"> 
                                <label for="categoria_moda"> Chorizos </label>
                                <span class="error"></span>
                            </div>
                            <div class="">
                                <input type="checkbox" name="categoriaInteres"  value ="Hogar" id="categoria_hogar"> 
                                <label for="categoria_hogar"> Bocados </label>
                                <span class="error"></span>
                            </div>
                            <div class="">
                                <input type="checkbox" name="categoriaInteres"  value ="Jugueteria" id="categoria_jugueteria"> 
                                <label for="categoria_jugueteria"> Salchichas </label>
                                <span class="error"></span>


                            </div>
                            
                            <% if (locals.errors && errors.categoriaInteres) {%>
                                <p class="span"><%= errors.categoriaInteres.msg %></p> 
                              <% }%>  
                        </div>

                        
                        
                        <div>
                            <div class="padtop20 padbottom20 cambio">
                                <div class="width-100pc  ">
                                    <button type="submit" value="Enviar"   class="   justify-content-center display-flex flex-wrap-wrap border-reg width-20pc margreg black height-30px font-size-26 hovercolor"  > 
                                        <p>Guardar</p> 
                                        <i class="fas fa-save "></i>
                                    </button>
                                </div>
                            </div>
                            <div>
                                <button type="reset" value="Borrar"  class=" justify-content-center display-flex flex-wrap-wrap border-reg width-20pc black height-30px font-size-26  hovercolor"> 
                                    <p>Borrar </p>
                                    <i class="fas fa-eraser "></i>
                                </button>
                            </div>     
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>



    <%- include("./partials/footer.ejs") %>


</body>

</html>